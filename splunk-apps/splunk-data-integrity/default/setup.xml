<setup>
  <block title="Advanced Data Integrity Setup Page">
    <text>Enter your details</text>
  </block>
  <block title="Wallet Setup" endpoint="integritysetup/setupendpoint" entity="dataintegrity">
      <input field="wallet">
        <label>Enter Your Wallet Address</label>
        <type>text</type>
      </input>
      <input field="privatekey">
        <label>Enter Your Wallet Private Key</label>
        <type>password</type>
      </input>
  </block>
  <block title="BlockChain Node Setup" endpoint="integritysetup/setupendpoint" entity="dataintegrity">
     <input field="url">
        <label>Enter Your BlockChain Node URL</label>
        <type>text</type>
      </input>
      <input field="apikey">
        <label>Enter Your BlockChain Node API Key</label>
        <type>password</type>
      </input>         
  </block>
  <block title="Contract Setup" endpoint="integritysetup/setupendpoint" entity="dataintegrity">
     <input field="contract">
        <label>Enter The Contract Address</label>
        <type>text</type>
      </input>
  </block>
</setup>
